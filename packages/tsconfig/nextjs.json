{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es2020"],
    "module": "es2020",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
